<div class = "container">  
  <div class = "row">
    <div class = "col-md-4 col-md-offset-4">
      <% if params[:plan] == '2' %>
        <h2 class= "text-center">Pro Account Sign Up</h2>
        <p class="text-center"> Gain full access to our community and contact information for only $10 a month! </p>
        <%= render "pro_form" %>
      <% else %>
        <h2 class= "text-center">Basic Account Sign Up</h2>
        <p class="text-center"> Gain basic access to our community for FREE! </p>
        <%= render "basic_form" %>
      <% end %>
      <%= render "devise/shared/links" %>
      </div>
    </div>  
  </div>
</div>